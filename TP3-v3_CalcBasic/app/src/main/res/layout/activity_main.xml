<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp">

    <EditText
        android:id="@+id/etValeur1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Entrez une valeur"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/etValeur2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Entrez une valeur"
        android:inputType="numberDecimal" />

    <RadioGroup
        android:id="@+id/rgOperation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton android:id="@+id/rbPlus" android:text="plus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RadioButton android:id="@+id/rbMoins" android:text="moins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RadioButton android:id="@+id/rbMult" android:text="multiplié"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RadioButton android:id="@+id/rbDiv" android:text="divisé"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RadioGroup>

    <TextView
        android:text="Résultat"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etResultat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp" >

        <Button android:id="@+id/btnRaz" android:text="Raz"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/material_dynamic_neutral60"
            app:circularflow_defaultRadius="@dimen/cardview_compat_inset_shadow"
            app:cornerRadius="@dimen/cardview_compat_inset_shadow"
            android:layout_marginEnd="8dp"/>

        <Button android:id="@+id/btnCalc" android:text="="
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/material_dynamic_neutral60"
            app:circularflow_defaultRadius="@dimen/cardview_compat_inset_shadow"
            app:cornerRadius="@dimen/cardview_compat_inset_shadow"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnQuit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quitter"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/material_dynamic_neutral60"
        app:circularflow_defaultRadius="@dimen/cardview_compat_inset_shadow"
        app:cornerRadius="@dimen/cardview_compat_inset_shadow" />

</LinearLayout>
