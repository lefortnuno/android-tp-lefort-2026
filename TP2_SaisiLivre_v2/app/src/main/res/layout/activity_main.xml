<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Titre de l'application -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saisie d'un Livre"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal" />

        <!-- Titre du livre -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titre du livre *"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etTitre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entrez le titre du livre"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:padding="12dp"
            android:background="@drawable/edittext_border" />

        <!-- Auteur -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auteur *"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etAuteur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entrez le nom de l'auteur"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:padding="12dp"
            android:background="@drawable/edittext_border" />

        <!-- Année de publication -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Année de publication"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etAnnee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: 2023"
            android:inputType="number"
            android:maxLength="4"
            android:padding="12dp"
            android:background="@drawable/edittext_border" />

        <!-- Code ISBN -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Code ISBN"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etISBN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: 978-2-1234-5678-9"
            android:inputType="text"
            android:maxLines="1"
            android:padding="12dp"
            android:background="@drawable/edittext_border" />

        <!-- Notation (RatingBar) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notation (0-5)"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.5"
                android:rating="0"
                android:isIndicator="false" />

            <TextView
                android:id="@+id/tvRatingValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:textColor="#2196F3" />

        </LinearLayout>

        <!-- Bouton de validation -->
        <Button
            android:id="@+id/btnValider"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:text="Enregistrer le livre"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:elevation="4dp" />

        <!-- Affichage des données saisies -->
        <TextView
            android:id="@+id/tvResultat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:padding="16dp"
            android:background="#F5F5F5"
            android:text="Aucun livre enregistré"
            android:textSize="16sp"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>