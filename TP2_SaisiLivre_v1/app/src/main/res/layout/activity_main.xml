<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Titre de l'application -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saisie d'un Livre"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:layout_marginBottom="32dp"
            android:layout_gravity="center_horizontal" />

        <!-- Titre du livre -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titre du livre *"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etTitre"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Entrez le titre du livre"
            android:textSize="16sp"
            android:padding="16dp"
            android:background="@drawable/edittext_background"
            android:inputType="textCapWords"
            android:maxLines="1" />

        <!-- Auteur -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auteur *"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etAuteur"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Entrez le nom de l'auteur"
            android:textSize="16sp"
            android:padding="16dp"
            android:background="@drawable/edittext_background"
            android:inputType="textPersonName"
            android:maxLines="1" />

        <!-- Année de publication -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Année de publication"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etAnnee"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Ex: 2023"
            android:textSize="16sp"
            android:padding="16dp"
            android:background="@drawable/edittext_background"
            android:inputType="number"
            android:maxLength="4" />

        <!-- Code ISBN -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Code ISBN"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etISBN"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Ex: 978-2-1234-5678-9"
            android:textSize="16sp"
            android:padding="16dp"
            android:background="@drawable/edittext_background"
            android:inputType="text"
            android:maxLines="1" />

        <!-- Notation -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notation (0-5)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.5"
                android:rating="3.0"
                android:isIndicator="false" />

            <TextView
                android:id="@+id/tvNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:layout_marginStart="20dp" />

        </LinearLayout>

        <!-- Bouton d'enregistrement -->
        <Button
            android:id="@+id/btnEnregistrer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:text="ENREGISTRER LE LIVRE"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:elevation="4dp" />

        <!-- Note : * champs obligatoires -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* Champs obligatoires"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>