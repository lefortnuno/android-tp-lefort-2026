<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- Titre de l'application -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horloge Digital/Analogique"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="32dp" />

    <!-- Conteneur pour l'horloge -->
    <FrameLayout
        android:id="@+id/clockContainer"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/clock_background">

        <!-- Horloge analogique (désactivée par défaut) -->
        <AnalogClock
            android:id="@+id/analogClock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <!-- Horloge digitale -->
        <DigitalClock
            android:id="@+id/digitalClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="48sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </FrameLayout>

    <!-- Label pour le Switch -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type d'horloge:"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp" />

    <!-- Switch pour basculer entre analogique et digitale -->
    <Switch
        android:id="@+id/switchClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digital / Analogique"
        android:textSize="24sp"
        android:checked="true"
        android:layout_marginBottom="24dp" />

    <!-- ToggleButton comme alternative
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alternative (ToggleButton):"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp" />
-->

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Digital"
        android:textOff="Analogique"
        android:textSize="14sp"
        android:layout_marginBottom="32dp" />

    <!-- Bouton pour régler l'heure
    <Button
        android:id="@+id/btnSetTime"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:text="SET TIME"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="@color/purple_500"
        android:textColor="@color/white"
        app:cornerRadius="28dp" />
 -->
</LinearLayout>