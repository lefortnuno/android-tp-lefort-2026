<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="Hello FSR !"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Bouton SMS -->
    <Button
        android:id="@+id/btnSMS"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SMS"
        android:textSize="18sp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:onClick="handleSMS"
        app:layout_constraintEnd_toStartOf="@id/btnCALL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2" />

    <!-- Bouton APPEL -->
    <Button
        android:id="@+id/btnCALL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="APPEL"
        android:textSize="18sp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:onClick="handleCall"
        app:layout_constraintEnd_toStartOf="@id/btnWEB"
        app:layout_constraintStart_toEndOf="@id/btnSMS"
        app:layout_constraintTop_toBottomOf="@id/textView2" />

    <!-- Bouton WEB -->
    <Button
        android:id="@+id/btnWEB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="WEB"
        android:textSize="18sp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:onClick="handleWeb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnCALL"
        app:layout_constraintTop_toBottomOf="@id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>
